<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacherresgister"
    android:fitsSystemWindows="true"
    android:background="@drawable/sky2">


    <EditText
        android:id="@+id/desigEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:hint="Enter Designation"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacherdesigLabel"
        app:layout_constraintTop_toBottomOf="@+id/teacherIdEditText" />

    <TextView
        android:id="@+id/teacherdesigLabel"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="Designation:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/desigEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherIdLabel" />

    <TextView
        android:id="@+id/teacherEmailLabel2"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:text="Email:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintEnd_toStartOf="@+id/emailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherdesigLabel" />

    <TextView
android:id="@+id/teacherRegisterTitle"
android:layout_width="223dp"
android:layout_height="93dp"
android:layout_marginStart="94dp"
android:layout_marginTop="32dp"
android:fontFamily="@font/sourgummy"
android:text="    TEACHER\nREGISTRATION"
android:textColor="@color/design_default_color_primary_dark"
android:textSize="35sp"
android:textStyle="bold"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/teacherNameLabel"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="26dp"
        android:text="Name:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/teacherIdLabel"
        app:layout_constraintEnd_toStartOf="@+id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teacherRegisterTitle" />


    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="61dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacherNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterTitle" />

    <TextView
        android:id="@+id/teacherIdLabel"
        android:layout_width="86dp"
        android:layout_height="33dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:text="Teacher ID:"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/teacherdesigLabel"
        app:layout_constraintEnd_toStartOf="@+id/teacherIdEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditText" />


    <EditText
        android:id="@+id/teacherIdEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Enter Teacher ID"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/desigEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacherIdLabel"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacherEmailLabel2"
        app:layout_constraintTop_toBottomOf="@+id/desigEditText" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/teacherPasswordLabel"
        app:layout_constraintTop_toBottomOf="@+id/teacherEmailLabel2" />

    <TextView
        android:id="@+id/teacherPasswordLabel"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="174dp"
        android:text="Password:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toStartOf="@+id/passwordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherEmailLabel2" />


    <Button
        android:id="@+id/registerButton"
        android:layout_width="144dp"
        android:layout_height="59dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="@android:color/transparent"
        android:text="REGISTER"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="13sp"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="@color/design_default_color_primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText"
        app:rippleColor="@color/design_default_color_primary_dark"
        app:strokeColor="@color/design_default_color_primary_dark"
        app:strokeWidth="5dp"
        tools:rippleColor="@color/design_default_color_primary_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>