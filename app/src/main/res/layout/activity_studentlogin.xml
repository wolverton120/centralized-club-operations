<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentlogin"
    android:fitsSystemWindows="true"
    android:background="@drawable/sky3">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/sourgummy"
        android:text="STUDENT LOGIN"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/studentemailog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/studentpasswordlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/studentemailog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/studentpasswordlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/studentlogin"
        android:layout_width="117dp"
        android:layout_height="56dp"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/lightred"
        android:text="LOGIN"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="13sp"
        app:icon="@android:drawable/ic_lock_idle_lock"
        app:iconTint="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/button18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/black"
        app:strokeColor="@color/design_default_color_on_secondary"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button18"
        android:layout_width="248dp"
        android:layout_height="45dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="206dp"
        android:backgroundTint="@color/lightred"
        android:text="HAVEN'T APPLIED YET?"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="13sp"
        app:icon="@android:drawable/ic_lock_idle_lock"
        app:iconTint="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/black"
        app:strokeColor="@color/design_default_color_on_secondary"
        app:strokeWidth="5dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="203dp"
        android:text="Remember Password"
        app:layout_constraintBottom_toTopOf="@+id/studentlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>